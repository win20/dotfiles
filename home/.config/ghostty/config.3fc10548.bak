# == GENERAL == #
theme = github-dark-default
title = " "
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
cursor-style = block
shell-integration-features = no-cursor
cursor-style-blink = false
font-feature = -calt,-liga,-dlig

window-position-x = 100
window-position-y = 50
window-width = 215
window-height = 60
window-padding-x = 10
window-padding-y = 10


# == KEYBINDS == #

# General
keybind = ctrl+d>r=reload_config

# Tabs
keybind = ctrl+d>n=new_tab

# Splits
keybind = ctrl+d>p=new_split:auto
keybind = ctrl+d>r=new_split:right
keybind = ctrl+d>d=new_split:down
keybind = ctrl+d>f=toggle_split_zoom
keybind = ctrl+shift+h=resize_split:left,30
keybind = ctrl+shift+l=resize_split:right,30
keybind = ctrl+shift+k=resize_split:up,30
keybind = ctrl+shift+j=resize_split:down,30

# Split Navigation
keybind = ctrl+d>h=goto_split:left
keybind = ctrl+d>j=goto_split:bottom
keybind = ctrl+d>k=goto_split:top
keybind = ctrl+d>l=goto_split:right

# Tab Navigation
keybind = ctrl+d>[=previous_tab
keybind = ctrl+d>]=next_tab
keybind = ctrl+d>1=goto_tab:1
keybind = ctrl+d>2=goto_tab:2
keybind = ctrl+d>3=goto_tab:3
keybind = ctrl+d>4=goto_tab:4
