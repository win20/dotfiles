{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "mode": {
    "build": {
      "model": "opencode/minimax-m2.1-free",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "plan": {
      "model": "github-copilot/claude-opus-4.5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  },
  "permission": {
    "bash": {
      "git status": "allow",
      "git log": "allow",
      "git diff": "allow",
      "ls": "allow",
      "pwd": "allow",

      "git add": "deny",
      "git commit": "deny",
      "git pull": "deny",
      "git push": "deny"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  }
}
