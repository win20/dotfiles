{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "instructions": ["CLAUDE.md"],
  "permission": {
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "ls": "allow",
      "pwd": "allow"
    }
  },
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      }
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  }
}