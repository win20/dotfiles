// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // General
  "base_keymap": "JetBrains",
  "vim_mode": true,
  "relative_line_numbers": true,
  "cursor_blink": false,
  "tab_size": 2,
  "show_whitespaces": "trailing",
  "show_wrap_guides": true,
  "wrap_guides": [120],
  "preview_tabs": {
    "enabled": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "inlay_hints": {
    "enabled": false
  },

  // Appearance
  "theme": "Github Dark",
  "ui_font_family": "Monaspace Neon",
  "ui_font_fallbacks": ["JetBrains Mono"],
  "buffer_font_family": "Monaspace Neon",
  "buffer_font_fallbacks": ["JetBrains Mono"],
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },

  // Language specific
  "file_types": {
    "YAML": ["yml"]
  },
  "languages": {
    "PHP": {
      "tab_size": 4
    },
    "TypeScript": {
      "tab_size": 2
    },
    "JavaScript": {
      "tab_size": 2
    },
    "YAML": {
      "tab_size": 2
    }
  },

  // AI
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "model_parameters": [],
    "default_profile": "write",
    "version": "2"
  },

  // Misc
  "terminal": {
    "shell": "system",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  }
}
