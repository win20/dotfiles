// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      // put key-bindings here if you want them to work in normal & visual mode
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      // General
      "space s": "workspace::SaveAll",
      "space f s": "workspace::NewSearch",
      "space f f": "file_finder::Toggle",
      "shift shift": "file_finder::Toggle",
      "space q": "pane::CloseActiveItem",

      // Panes
      "ctrl-p": "pane::ActivatePreviousItem",
      "ctrl-n": "pane::ActivateNextItem",
      "ctrl-w /": "pane::SplitRight",
      "ctrl-w -": "pane::SplitDown",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",

      // Docks
      "alt-1": "project_panel::ToggleFocus",
      "space e": "workspace::ToggleLeftDock",
      "space a": "workspace::ToggleRightDock",
      "space t": "workspace::ToggleBottomDock",

      // Git
      "cmd-t": "git::Pull",
      "cmd-shift-t": "git::Push",
      "space g g": "git_panel::ToggleFocus",
      "alt-2": "git_panel::ToggleFocus",
      "space g b": "git::Branch",
      "space g r": "git::Restore"
    }
  },
  {
    // Visual, visual line & visual block modes
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {}
  },
  {
    // Insert mode
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-j": "editor::JoinLines"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },

  {
    "bindings": {
      // navigation within UI menus
      "alt-f12": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      // navigation within code suggestions
      "ctrl-j": "editor::ContextMenuNext",
      "ctrl-k": "editor::ContextMenuPrevious"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "use_key_equivalents": true,
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "o": "project_panel::Open"
    }
  }
]
