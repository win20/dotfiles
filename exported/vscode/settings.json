{
  // Vim
  "vim.statusBarColorControl": false,
  "vim.smartRelativeLine": false,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.files.saveAll"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["git.checkout"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":tabn"]
    },
    {
      "before": ["<C-p>"],
      "commands": [":tabp"]
    },
    {
      "before": ["e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },
    {
      "before": ["u"],
      "after": [],
      "commands": [
        {
          "command": "undo",
          "args": []
        }
      ]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [
        {
          "command": "redo",
          "args": []
        }
      ]
    }
  ],

  // General
  "editor.minimap.enabled": false,
  "extensions.ignoreRecommendations": true,
  "editor.cursorBlinking": "solid",
  "editor.renderWhitespace": "trailing",
  "workbench.editor.enablePreview": true,
  "editor.rulers": [120],
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",

  // Appearance
  "workbench.colorTheme": "GitHub Dark Default",
  "editor.fontFamily": "Monaspace Neon, monospace",
  "workbench.iconTheme": "symbols",
  "editor.fontSize": 14,
  "workbench.tree.renderIndentGuides": "none",
  "editor.guides.highlightActiveIndentation": true,

  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.2,
  "go.buildTags": "unit,integration",
  "diffEditor.ignoreTrimWhitespace": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "go": false
  },
  "workbench.activityBar.location": "top",
  "explorer.compactFolders": false,
  "symbols.hidesExplorerArrows": false,
  "diffEditor.renderSideBySide": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "git.confirmSync": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "gitlens.graph.minimap.enabled": false,

  // Language specific settings
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "cursor.composer.usageSummaryDisplay": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "gitlens.ai.model": "gitkraken",
  "gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash",

  "window.restoreWindows": "folders",

  // Claude Code
  "claudeCode.useCtrlEnterToSend": true,
  "claudeCode.selectedModel": "default",
  "claudeCode.useTerminal": true,
  "claudeCode.preferredLocation": "panel",
  "editor.accessibilitySupport": "off",
  "gitlens.views.commits.files.layout": "list",
  "accessibility.signals.lineHasBreakpoint": {
    "sound": "off",
    "announcement": "auto"
  },
