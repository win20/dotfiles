theme = Github Dark
title = " "
macos-titlebar-proxy-icon = hidden
cursor-style = block
shell-integration-features = no-cursor
cursor-style-blink = false
background-opacity = 0.95
unfocused-split-opacity = 0.2
background-blur-radius = 15
font-feature = -calt,-liga,-dlig

keybind = shift+ctrl+h=new_split:left
keybind = shift+ctrl+j=new_split:down
keybind = shift+ctrl+k=new_split:up
keybind = shift+ctrl+l=new_split:right

keybind = ctrl+[=goto_split:left
keybind = ctrl+-=goto_split:bottom
keybind = ctrl+==goto_split:top
keybind = ctrl+]=goto_split:right

keybind = opt+1=goto_tab:1
keybind = opt+2=goto_tab:2
keybind = opt+3=goto_tab:3

window-padding-x = 10
window-padding-y = 10
